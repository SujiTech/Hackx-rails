<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" role="alert">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :begin_at %>
    <div class="input-group date" id="datetimepicker">
      <%= f.text_field :begin_at, class: 'form-control', data: { date_format: 'YYYY/MM/DD' } %>
      <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
    </div>
  </div>


  <div class="field">
    <%= f.label :end_at %>
    <div class="input-group date" id="datetimepicker">
      <%= f.text_field :end_at, class: 'form-control', data: { date_format: 'YYYY/MM/DD' } %>
      <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
    </div>
  </div>

  <div class="field">
    <%= f.label :enroll_beigin_at %>
    <div class="input-group date" id="datetimepicker">
      <%= f.text_field :enroll_beigin_at, class: 'form-control', data: { date_format: 'YYYY/MM/DD' } %>
      <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
    </div>
  </div>

  <div class="field">
    <%= f.label :enroll_end_at %>
    <div class="input-group date" id="datetimepicker">
      <%= f.text_field :enroll_end_at, class: 'form-control', data: { date_format: 'YYYY/MM/DD' } %>
      <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
    </div>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :cover %>
    <%= f.file_field :cover, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :logo %>
    <%= f.file_field :logo, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :organization_id %>
    <%= f.text_field :organization_id, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "提交", class: "btn" %>
  </div>
<% end %>
