<div style="height:380px;background: url(https://placeholdit.imgix.net/~text?txtsize=20&amp;txt=hackathon&amp;w=130&amp;h=130&amp;bg=fb9505&amp;txtclr=ffffff);margin-top: -80px">
</div>
<div class="container">
  <div class="page-header">
    <h3><%= @event.title %></h3>
  </div>
  <div class="row">
    <div class="media">
      <div class="media-body">
        <div class="media-heading"><span class="label label-info"><%= icon('map-marker', @event.city) %></span></div>
      </div>
      <div class="media-right media-middle">
      </div>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="panel panel-primary">
      <div class="panel-heading">详情</div>
      <div class="panel-body">
        <%= @event.description %>
      </div>
    </div>
  </div>

<% if current_user.admin? or @event.event.owner == current_user %>
  <hr>
  <%= link_to 'Edit', edit_event_path(@event) %> |
  <%= link_to 'Back', events_path %>
<% end %>
</div>
