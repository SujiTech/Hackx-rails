<%= devise_error_messages! %>

<h3 class="text-center form-title">Change your password</h3>
<hr>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "card-block"}) do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, "New password", class: "form-control-label" %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control input-lg" %>
    <% if @minimum_password_length %>
<!--  <p class="text-muted text-xs-left">
        (<%= @minimum_password_length %> characters minimum)
      </p>
--> <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Password Again", class: "form-control-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= f.submit "Change my password", class: "btn btn-action btn-lg btn-block" %>
  </div>
<% end %>

<div class="auth-links text-center">
</div>


