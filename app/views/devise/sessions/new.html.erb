<%= render "devise/shared/social_logins" %>

<%= devise_error_messages! %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "card-block"}) do |f| %>
  <div class="form-group">
    <%= f.label :login, class: "form-control-label" %>
    <%= f.text_field :login, autofocus: true, class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "form-control-label" %>
    <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <%= f.label :remember_me, class: 'input-lg' do %>
      <%= f.check_box :remember_me %> Remember Me
    <% end %>
  <% end -%>

  <div class="form-group">
    <%= f.submit "Log in", class: "btn btn-action btn-block btn-lg" %>
  </div>
<% end %>

<div class="auth-links text-center">
  <p>还未注册？由此<%= link_to "注册", new_registration_path(resource_name) %></p>
  <p>密码忘了？由此<%= link_to "找回", new_password_path(resource_name) %></p>
</div>
