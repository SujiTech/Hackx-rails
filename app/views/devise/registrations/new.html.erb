<%= render "devise/shared/social_logins" %>

<%= devise_error_messages! %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "card-block"}) do |f| %>
  <div class="form-group">
    <%= f.label :username, class: "form-control-label"%>
    <%= f.text_field :username, autofocus: true, class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "form-control-label"%>
    <%= f.email_field :email, autofocus: true, class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "form-control-label"%>
    <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg" %>
    <% if @minimum_password_length %>
<!--       <p class="text-muted text-xs-left">
        (<%= @minimum_password_length %> characters minimum)
      </p>
 -->    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Password Again", class: "form-control-label"%>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= f.submit "Sign up", class: "btn btn-action btn-lg btn-block" %>
  </div>
<% end %>
<div class="auth-links text-center">
  <p>已经注册？由此<%= link_to "登录", new_session_path(resource_name) %></p>
  <p>密码忘了？由此<%= link_to "找回", new_password_path(resource_name) %></p>
</div>
